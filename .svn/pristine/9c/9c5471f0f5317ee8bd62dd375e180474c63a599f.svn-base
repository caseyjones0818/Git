<ion-content text-center>
  <img class="logo-size" src="assets/img/cangzhen.jpeg" margin-top />
  <ion-item>
    <ion-input type="number" placeholder="账号" clearInput [(ngModel)]="account"></ion-input>
  </ion-item>
  <ion-item>
    <ion-input type="password" placeholder="密码" clearInput [(ngModel)]="password"></ion-input>
  </ion-item>
  <button ion-button full margin-top color="cangzhen" class="cuti" (click)="go()" >登入</button>
  <button ion-button full margin-top color="cangzhen" class="cuti" (click)="youke()" >随便逛逛</button>
  <p text-center class="login-p-margin"[navPush]="forgetPasswordPage">忘记密码？</p>
  <p text-center class="login-p-margin" >没有账户？
    <a [navPush]="RegisterAccountPage">注册</a>
  </p>
  <p class="footName">© 2017 上海藏珍信息科技</p>
</ion-content>
